---
import ExternalLink from "@lucide/astro/icons/external-link"

interface Props {
    title: string
    description: string
    href: string
    repo?: string
    docs?: string
    image?: string
}

const {title, description, href, repo, docs, image} = Astro.props
---

<div
    class="p-1 rounded-3xl shadow-sm bg-cover bg-center bg-white/10"
    style={{
        backgroundImage: image ? `url('${image}')` : undefined,
    }}
>
    <div
        class="flex flex-col bg-linear-to-b from-black to-black/50 gap-1 p-4 rounded-[21px] shadow-sm"
    >
        <a rel="noreferrer" target="_blank" href={href} class="block">
            <h2 class="text-lg font-medium underline">{title}</h2>
        </a>
        <p class="text-pretty">{description}</p>
        <slot />
        <div class="flex items-start gap-2">
            {
                repo && (
                    <a
                        class="bg-white flex text-black shadow-sm text-sm font-semibold rounded-md pl-1.5 items-center gap-1 pr-1"
                        rel="noreferrer"
                        target="_blank"
                        href={`https://github.com/aspizu/${repo}`}
                    >
                        GitHub
                        <ExternalLink class="size-4" />
                    </a>
                )
            }
            {
                docs && (
                    <a
                        class="bg-white flex text-black shadow-sm text-sm font-semibold rounded-md pl-1.5 items-center gap-1 pr-1"
                        rel="noreferrer"
                        target="_blank"
                        href={docs}
                    >
                        Documentation
                        <ExternalLink class="size-4" />
                    </a>
                )
            }
        </div>
    </div>
</div>
