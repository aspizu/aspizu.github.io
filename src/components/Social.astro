---
interface Props {
    href: string
    color: string
    tooltip?: string
}

const {href, color, tooltip} = Astro.props
---

<div class="Social transition-all relative group">
    <a
        class="bg-white rounded-2xl size-12 flex items-center justify-center shadow"
        style={{color}}
        target="_blank"
        rel="noreferrer"
        href={href}><slot /></a
    >
    {
        tooltip && (
            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-yellow-100 text-neutral-800 text-xs rounded-md whitespace-nowrap opacity-0 scale-0 translate-y-2 group-hover:opacity-100 group-hover:scale-100 group-hover:translate-y-0 transition-all duration-300 ease-out pointer-events-none">
                {tooltip}
                <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-yellow-100 -translate-y-[0.5px]" />
            </div>
        )
    }
</div>
