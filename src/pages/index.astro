---
import Card from "../components/Card.astro"
import LastFM from "../components/LastFM.astro"
import Project from "../components/Project.astro"
import Socials from "../components/Socials.astro"
import StatusCafe from "../components/StatusCafe.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <div id="particles" class="absolute inset-0 -z-1"></div>

    <div class="flex flex-col shrink-0">
        <div
            class="relative grid bg-linear-to-b from-blue-600/20 to-blue-600/50 p-1 rounded-3xl card w-auto shrink-0"
        >
            <!-- <img
                    class="absolute z-1 -bottom-10 scale-[1.6]"
                    src="/stickers.png"
                    alt="overlay"
                /> -->
            <div
                class="flex relative flex-col gap-4 bg-linear-to-b from-black to-black/25 rounded-[21px] shadow shrink-0"
            >
                <StatusCafe />
                <div
                    class="relative rounded-[21px] rounded-b-none h-32 w-full bg-[url('/banner.png')] bg-cover bg-top opacity-50"
                >
                </div>
                <img
                    src="/avatar.png"
                    alt="avatar"
                    class="absolute top-8 left-4 size-32 rounded-full border border-black shadow"
                />
                <div class="flex flex-col p-4 pt-8">
                    <h1 class="text-2xl font-medium">
                        <span
                            class="text-shadow-blue-300 text-shadow-[0px_1px_5px] bg-white bg-clip-text text-transparent"
                            >aspizu</span
                        >
                        <span class="text-neutral-400 font-light">he/him</span>
                        <img src="/india.png" class="inline size-6" />
                    </h1>
                    <p>Hey there, I like to make stuff. I'm 21</p>
                    <LastFM />
                    <Socials />
                </div>
            </div>
        </div>
        <p class="text-center text-white/75 text-xs font-medium mt-2">
            MADE WITH ❤️ BY ASPIZU
        </p>
    </div>
    <Card>
        <Project
            title="goboscript"
            description="Text-based language that compiles to Scratch projects. Enables complex, versionable workflows while remaining compatible with Scratch’s visual runtime."
            href="https://aspizu.github.io/goboscript.ide"
            repo="goboscript"
            docs="https://aspizu.github.io/goboscript"
            image="https://camo.githubusercontent.com/4d5d6bd985ec424d041a4b1211de990cf3e66047733de3edcdb4ffa26152e46b/68747470733a2f2f752e6375626575706c6f61642e636f6d2f617370697a752f556e7469746c65643230323431323131313931342e706e67"
        />

        <Project
            title="Nixite"
            description="Generates unattended Linux install scripts. Automatically selects optimal methods and minimizes prompts for fast system bootstrap."
            href="https://aspizu.github.io/nixite"
            repo="nixite"
            image="https://github.com/aspizu/nixite/raw/main/public/screenshot.png"
        />

        <Project
            title="tshu"
            description="Python library for safe, cross-platform shell execution. Uses t-strings and a Rust-backed bash implementation."
            href="https://aspizu.github.io/tshu"
            repo="tshu"
            docs="https://aspizu.github.io/tshu"
        />

        <Project
            title="musync"
            description="Batch copy, rename, and convert lossless audio. Optimized pipeline for producing high-quality MP3 output."
            href="https://github.com/aspizu/musync"
            repo="musync"
            image="https://github.com/aspizu/musync/raw/main/screenshot.png"
        />

        <Project
            title="msglint"
            description="Fast commit message linter. Enforces format and conventions before changes enter version control."
            href="https://github.com/aspizu/msglint"
            repo="msglint"
            image="https://github.com/aspizu/msglint/raw/main/docs/assets/screenshot.png"
        />

        <Project
            title="neocities-sync"
            description="Deploys projects to Neocities with minimal API usage. Suitable for Vite, Astro, and Next.js builds."
            href="https://github.com/aspizu/neocities-sync"
            repo="neocities-sync"
        />

        <Project
            title="instax"
            description="Generates realistic instant-camera prints. Exports dimension-accurate guides for original Instax film."
            href="https://aspizu.github.io/instax"
            repo="instax"
        /></Card
    >
</Layout>
