---
import "@fontsource-variable/figtree"
import "@fontsource-variable/jetbrains-mono"
import "../styles/global.css"
import {Fragment} from "astro/jsx-runtime"
import Project from "../components/Project.astro"
import projects from "../data/projects.json"
import Profile from "../components/Profile.astro"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>aspiz.uk</title>
        <script
            is:inline
            src="https://louisabraham.github.io/nekojs/neko.js"
            data-autostart></script>
        <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js"
        ></script>
        <script src="https://unpkg.com/hyperscript.org@0.9.14"></script>
    </head>
    <body class="relative bg-black scheme-dark">
        <div class="flex flex-col bg-black text-white py-16">
            <div class="mx-auto grid grid-cols-1 xl:grid-cols-3 items-start gap-12 z-1">
                <div
                    class="relative flex flex-col max-w-96 gap-12 animate-in slide-in-from-bottom duration-500 fade-in"
                >
                    <Profile />
                    <div
                        class="Terminal flex flex-col bg-neutral-900 rounded-xl overflow-hidden shadow-xl border border-neutral-800 transition-colors"
                    >
                        <!-- Terminal header -->
                        <div
                            class="flex items-center gap-3 bg-neutral-950 px-3 py-1 border-b border-neutral-800"
                        >
                            <div class="flex gap-1.5">
                                <div
                                    class="w-3 h-3 rounded-full bg-red-500/80 hover:bg-red-500 transition-colors"
                                >
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-yellow-500/80 hover:bg-yellow-500 transition-colors"
                                >
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-green-500/80 hover:bg-green-500 transition-colors"
                                >
                                </div>
                            </div>
                            <p class="text-neutral-500 text-xs font-medium">
                                Dig the stuff I do? Try digging my <span
                                    class="text-neutral-400">micro-blog</span
                                > on DNS
                            </p>
                        </div>
                        <!-- Terminal body -->
                        <div class="p-4 font-mono text-sm">
                            <div class="flex items-center gap-2">
                                <span class="text-emerald-400 select-none">âžœ</span>
                                <span class="text-blue-400 select-none">~</span>
                                <code class="text-neutral-300">
                                    <span class="text-emerald-400">dig</span>
                                    <span class="text-yellow-400"> -t</span>
                                    <span class="text-neutral-300"> txt</span>
                                    <span class="text-yellow-400"> +short</span>
                                    <span class="text-neutral-300"> log.aspiz.uk</span>
                                </code>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="relative flex flex-col max-w-96 gap-8 animate-in slide-in-from-bottom duration-500 fade-in"
                >
                    <h1
                        class="text-xs mx-auto font-semibold px-1 bg-black z-2 text-neutral-400"
                    >
                        OPEN SOURCE
                    </h1>
                    <div
                        class="absolute inset-x-0 w-full h-px bg-neutral-800 top-2 z-1"
                    >
                    </div>
                    {projects.foss.map((project) => <Project {...project} />)}
                </div>

                <div
                    class="relative flex flex-col max-w-96 gap-8 animate-in slide-in-from-bottom duration-500 fade-in"
                >
                    <h1
                        class="text-xs mx-auto font-semibold px-1 bg-black z-2 text-neutral-400"
                    >
                        SIDE PROJECTS
                    </h1>
                    <div
                        class="absolute inset-x-0 w-full h-px bg-neutral-800 top-2 z-1"
                    >
                    </div>
                    {projects.side.map((project) => <Project {...project} />)}
                </div>
            </div>
        </div>
        <div class="footer"></div>
    </body>
</html>

<script>
    import {GhostCursor} from "../scripts/ghost-cursor.ts"
    new GhostCursor()
    function setBgColor() {
        const maxScroll = document.body.scrollHeight - window.innerHeight
        const gradientHeight = 128

        // Calculate how far into the gradient zone we are
        const distanceFromBottom = maxScroll - window.scrollY
        const scrollPercent = Math.max(
            0,
            Math.min(1, 1 - distanceFromBottom / gradientHeight),
        )

        // Interpolate from black (0,0,0) to red (141,48,48)
        const r = Math.round(141 * scrollPercent)
        const g = Math.round(48 * scrollPercent)
        const b = Math.round(48 * scrollPercent)

        document.body.style.backgroundColor = `rgb(${r}, ${g}, ${b})`
    }
    window.addEventListener("scroll", setBgColor)
</script>
